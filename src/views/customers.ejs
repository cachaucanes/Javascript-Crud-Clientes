<% include partials/_headers %>

<div class="container">
  <div class="row mt-5">
    <div class="col-md-7">
      <table class="table table-border table-hover Table">
        <thead>
          <tr>
            <th>nÂ°</th>
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
          <% for (let i = 0; i < data.length; i++) { %>
          <tr>
            <td><%= (i + 1) %></td>
            <td><%= data[i].name %></td>
            <td><%= data[i].address %></td>
            <td><%= data[i].phone %></td>
            <td class="form-group">
              <a href="/delete/<%= data[i].id %>" class="btn btn-sm btn-outline-warning">Delete</a>
              <a href="/update/<%= data[i].id %>" class="btn btn-sm btn-outline-info">Update</a>
            </td>
          </tr>
          <% } %>
          <% } %>

        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="POST">
            <div class="form-group">
              <input type="text" name="name" placeholder="Name" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="address" placeholder="Address" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="phone" placeholder="Phone" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Save Customer</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<% include partials/_footer %>