<% include partials/_headers %>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/update/<%= data.id %>" method="POST">
            <div class="form-group">
              <input
                type="text"
                name="name"
                value="<%= data.name %>"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                name="address"
                value="<%= data.address %>"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                name="phone"
                value="<%= data.phone %>"
                class="form-control"
              />
            </div>
            <div class="d-flex justify-content-between">
              <a href="/" class="btn btn-outline-light text-info">Cancelar</a>
              <button type="submit" class="btn btn-outline-primary">
                Update Customer
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<% include partials/_footer %>
